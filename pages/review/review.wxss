/* main */

.main {
    display: flex;
    flex-direction: column;
    margin: 24rpx;
    padding: 24rpx;
    background-color: #fff;
    border-radius: 20rpx;
    height: calc(100% - 72px);
    box-shadow: 0 6px 18px 0 rgb(232 237 250 / 50%);
}

/*----------------------------------------------------------------*/

/* main-show */
.main-show {
    flex: 4;
    position: relative;
}

/*----------------------------------------------------------------*/

/* main-show--top */
.main-show--top {
    overflow: hidden;
}

/* showModel */
.showModel {
    position: relative;
    float: right;
    color: #4c5161;
    padding: 16rpx 64rpx 16rpx 24rpx;
    border: 1px solid #eee;
    border-radius: 4px;
}

.showModel-text::before {
    content: "";
    position: absolute;
    right: 10px;
    top: 50%;

    width: 0;
    border-width: 6px;
    border-style: dashed;
    border-color: transparent;

    margin-top: -3px;
    cursor: pointer;
    border-top-color: #c2c2c2;
    border-top-style: solid;
    transition: all .3s;
    -webkit-transition: all .3s;
}
/*----------------------------------------------------------------*/

/* show-value */
.show-value {
    position: relative;
    height: calc(100% - 40px);
}

.show-value::before {
    position: absolute;
    top: 50%;
    left: 50%;
    content: attr(data-show);
    text-align: center;
    font-size: 36rpx;
    color: #a2a9b6;
    transform: translate(-50%, -50%);
}

/* main-show-tools */
.main-show--tools {
    position: absolute;
    right: 0;
    bottom: 0;
    display: inline-flex;
    align-items: center;
    justify-content: flex-end;
    flex-direction: column;
}

.main-show--tools image {
    width: 24px;
    height: 24px;
}

.main-show--tools image:first-child {
    margin-bottom: 16px;
}
/*----------------------------------------------------------------*/

/* main-from */
.main-from {
    flex: 1;
}

#review-input {
    width: 100%;
    height: 144rpx;
    padding: 24rpx;
    background-color: #f7f9fa;
    border-radius: 20rpx;
    box-sizing: border-box;
}

