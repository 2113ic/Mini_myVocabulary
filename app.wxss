/* me */
:root {
    --dark: #4c5161;
    --light: #f7f9fa;
    --white: #fff;
    --white-hover: #F2F2F2;
    --primary: #2A80EB;
    --gay: #a2a9b6;
    --bule: #2a80eb;
    --danger: #EB4646;
    --warning: #F59B00;
    --normal: #4C5161;
    --disabled: #A2A9B6;
    --success: #1CAD70;
    --primary-hover: #287ADF;
    --success-hover: #1DA36A;
    --warning-hover: #E89301;
    --danger-hover: #DF4342;
}

page {
    background-color: #f7f9fa;
}

.container {
    display: flex;
    flex-direction: column;
    height: 100vh;
    background-color: #f7f9fa;
}

.main {
    margin-top: 120rpx !important;
}

/*----------------------------------------------------------------*/

/* header */
.header {
    position: fixed;
    left: 0;
    right: 0;
    top: 0;
    z-index: 1000;

    display: flex;
    justify-content: space-between;
    align-items: center;
}

/* nav */
.nav {
    display: flex;
    align-items: center;
    height: 96rpx;
}

.nav-item {
    position: relative;
    font-size: 36rpx;
    color: #4c5161;
    font-weight: bold;
    margin-left: 32rpx;
}

.nav-focus::before {
    position: absolute;
    left: 0;
    bottom: -6px;
    content: "";
    width: 100%;
    border-bottom: 4px solid #2a80eb;
    border-radius: 2px;
}

/* icon-down */
.icon-down {
    margin-right: 32rpx;
}

.icon-down_container {
    position: absolute;
    top: 96rpx;
    right: 24rpx;
    z-index: 999;

    width: 200rpx;
    border-radius: 16rpx;
    background-color: #fff;
    box-shadow: 1px 3px 8px rgba(18, 18, 18, 0.12);
}

.icon-down_item {
    color: #4c5161;
    padding: 12rpx 24rpx 12rpx;
    border-bottom: 1px solid #eee;
}

.icon-down_item:first-child {
    padding-top: 24rpx;
}

.icon-down_item:last-child {
    padding-bottom: 24rpx; 
    border-bottom: 0;
}


